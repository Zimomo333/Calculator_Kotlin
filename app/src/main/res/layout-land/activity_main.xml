<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/click_green_gray"
        android:text="C"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%" />

    <Button
        android:id="@+id/buttondeng"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#8BC34A"
        android:text="="
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%" />

    <Button
        android:id="@+id/button1"
        android:textSize="40sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%"
        android:layout_above="@id/buttonc"
        android:text="1"
        android:background="@drawable/click_green_white"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@id/buttonc"
        android:layout_alignParentBottom="true"
        android:text="0"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%"
        android:background="@drawable/click_green_white"/>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/button0"
        android:background="@drawable/click_green_gray"
        android:text="."
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%" />
    <Button
        android:id="@+id/button2"
        android:textSize="40sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%"
        android:layout_toRightOf="@id/button1"
        android:layout_above="@id/button0"
        android:text="2"
        android:background="@drawable/click_green_white"/>
    <Button
        android:id="@+id/button3"
        android:textSize="40sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%"
        android:layout_toRightOf="@id/button2"
        android:layout_above="@id/buttonDot"
        android:text="3"
        android:background="@drawable/click_green_white"/>
    <Button
        android:id="@+id/button4"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%"
        android:text="4"
        android:textSize="40sp"
        android:layout_above="@id/button1"
        android:background="@drawable/click_green_white"/>
    <Button
        android:id="@+id/button5"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%"
        android:text="5"
        android:textSize="40sp"
        android:layout_above="@id/button2"
        android:layout_toRightOf="@id/button4"
        android:background="@drawable/click_green_white"/>
    <Button
        android:id="@+id/button6"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%"
        android:text="6"
        android:textSize="40sp"
        android:layout_above="@id/button3"
        android:layout_toRightOf="@id/button5"
        android:background="@drawable/click_green_white"/>

    <Button
        android:id="@+id/buttonj"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@id/buttoncheng"
        android:layout_toRightOf="@id/button6"
        android:background="@drawable/click_green_gray"
        android:text="+"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%" />

    <Button
        android:id="@+id/buttoncheng"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@id/buttondeng"
        android:layout_toRightOf="@id/button3"
        android:background="@drawable/click_green_gray"
        android:text="*"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%" />
    <Button
        android:id="@+id/button7"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%"
        android:text="7"
        android:textSize="40sp"
        android:layout_above="@id/button4"
        android:background="@drawable/click_green_white"/>
    <Button
        android:id="@+id/button8"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%"
        android:text="8"
        android:textSize="40sp"
        android:layout_above="@id/button5"
        android:layout_toRightOf="@id/button7"
        android:background="@drawable/click_green_white"/>
    <Button
        android:id="@+id/button9"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%"
        android:text="9"
        android:textSize="40sp"
        android:layout_above="@id/button6"
        android:layout_toRightOf="@id/button8"
        android:background="@drawable/click_green_white"/>

    <Button
        android:id="@+id/buttonjian"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@id/buttonj"
        android:layout_toRightOf="@id/button9"
        android:background="@drawable/click_green_gray"
        android:text="-"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%" />

    <Button
        android:id="@+id/buttonzuokuo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@id/button7"
        android:background="@drawable/click_green_gray"
        android:text="（"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="50%" />

    <Button
        android:id="@+id/buttonyoukuo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@id/button8"
        android:layout_toRightOf="@id/buttonzuokuo"
        android:background="@drawable/click_green_gray"
        android:text="）"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="50%" />

    <Button
        android:id="@+id/buttonchu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/buttoncheng"
        android:layout_toRightOf="@id/buttonDot"
        android:background="@drawable/click_green_gray"
        android:text="/"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%" />

    <Button
        android:id="@+id/buttondel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/buttonyoukuo"
        android:layout_toRightOf="@id/buttonjian"
        android:background="@drawable/click_green_gray"
        android:text="Del"
        android:textColor="#4CAF50"
        android:textSize="36sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%" />

    <Button
        android:id="@+id/buttonyu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/buttondel"
        android:layout_toRightOf="@id/buttonj"
        android:background="@drawable/click_green_gray"
        android:text="%"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%" />

    <Button
        android:id="@+id/buttonfang"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/buttonyu"
        android:layout_toRightOf="@id/buttoncheng"
        android:background="@drawable/click_green_gray"
        android:text="^"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="20%" />
    <TextView
        android:id="@+id/text_view"
        android:background="#FAFFF0"
        android:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="80sp"
        app:autoSizeMinTextSize="20sp"
        app:autoSizeStepGranularity="4sp"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:textSize="40sp"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%"/>

</androidx.percentlayout.widget.PercentRelativeLayout>